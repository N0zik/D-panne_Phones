        .navbar-nav .nav-item .nav-link::after {
            content: '';
            position: absolute;
            width: 100%;
            transform: scaleX(0);
            height: 1px;
            bottom: 0;
            left: 0;
            background-color: rgb(9, 71, 113);
            transform-origin: bottom right;
            transition: transform 0.25s ease-out;
