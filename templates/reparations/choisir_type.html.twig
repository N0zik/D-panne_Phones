{% extends 'base.html.twig' %}

{% block title %}Une Réparation ?{% endblock %}

{% block body %}
<style>
    .carousel {
        width: 90%;
        height: 300px;
        margin: 0 auto;
        border-radius: 15px;
        overflow: hidden;
        margin-top: 20px;
    }
    .carousel-inner img {
        height: 500px;
        object-fit: cover;
    }

    .carousel-item {
        height: 100%;
    }

    .carousel-caption {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        text-align: center;
        background-color: rgba(0, 0, 0, 0.4); /* Optional: adds a semi-transparent background */
        padding: 10px;
        border-radius: 10px;
        width: 100%; /* Adjust the width of the caption */
        height: 100%; /* Adjust the height of the caption */
        font-size: 1.2em; /* Adjust the font size of the caption */
    }

    .carousel-item {
        transition: transform 0.7s ease, opacity 0.8s ease; /* Adjust transition duration */
    }

    

    .card-title {
        font-size: 20px;
        font-weight: bold;
    }

    .card-img-top {
            width: 100%;
            height: 200px; /* Taille fixe pour les images */
            object-fit: cover; /* Pour couvrir toute la zone sans déformation */
        }
        .divider {
            height: 2px;
            background-color: #ccc;
            margin: 30px 0;
        }

        #image_rep_mobile {
            height: 200px;
        }

        #uneRep {
            font-size: 2em;
            font-weight: bold;
        }

    .header-content {
        background-color: #f7f7f7;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .faq-section {
        padding: 20px;
        background-color: #e9ecef;
        border-radius: 8px;
    }

    .faq-question {
        font-weight: bold;
    }

    .section-title {
        margin-top: 20px;
    }


    .highlight {
        color: rgb(9, 71, 113);
        font-weight: bold;
        font-size: 16px;
    }

    .card {
        height: 200px;
        width: 250px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        background-color: transparent;
        border: none;
    }

    .card-img-top {
        max-height: 200px; 
        width: auto;
        max-width: 100%; 
        
    }

    .card-body {
        padding: 0.5rem; /* Réduit le padding intérieur pour économiser de l'espace */
    }


</style>

