{# templates/reparations/choisir_modele.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Choisir un Modèle pour {{ marque.name }}{% endblock %}

{% block body %}
<style>

{# Banière #}

    .carousel {
        width: 90%;
        height: 300px;
        margin: 0 auto;
        border-radius: 15px;
        overflow: hidden;
        margin-top: 20px;
    }
    .carousel-inner img {
        height: 500px;
        object-fit: cover;
    }

    .carousel-item {
        height: 100%;
    }

    .carousel-caption {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        text-align: center;
        background-color: rgba(0, 0, 0, 0.4); /* Optional: adds a semi-transparent background */
        padding: 10px;
        border-radius: 10px;
        width: 100%; /* Adjust the width of the caption */
        height: 100%; /* Adjust the height of the caption */
        font-size: 1.2em; /* Adjust the font size of the caption */
    }

    .carousel-item {
        transition: transform 0.7s ease, opacity 0.8s ease; /* Adjust transition duration */
    }
    
{# Banière #}


</style>

{# Banière #}

<div id="carouselExampleIndicators" class="carousel slide mb-5" data-ride="carousel" data-interval="4000">
    
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="{{ asset('images/reparation/reparation_mobile2.jpeg') }}" alt="First slide">
            <div class="carousel-caption">
                <h5 id="uneRep" >Une Réparation ?</h5>

            </div>
        </div>
    </div>
</div>

{# Banière #}

{# Card Model #}

<div class="container mt-4">
    <h1 class="text-center">Modèles pour {{ marque.name }}</h1>
    <div class="row">
        {% for model in modeles %}
            <div class="col-md-2 mb-2">
                <div class="card">
                    <a href="{{ path('liste_reparations', {'modeleName': model.name, 'type': type == 'phone' ? 'phone' : 'tablet'}) }}">
                        <img  src="{{ asset('uploads/images/' ~ model.image) }}" class="card-img-top" alt="Image de {{ model.name }}">
                        <div class="card-body text-center">
                    </a>
                            <h6 class="card-title">{{ model.name }}</h6>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{# Card Model #}

{% endblock %}