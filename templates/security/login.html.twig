{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}

<style>
.carousel {
            width: 90%;
            height: 300px;
            margin: 0 auto;
            border-radius: 15px;
            overflow: hidden;
            margin-top: 20px;
        }
    .carousel-inner img {
        height: 500px;
        object-fit: cover;
    }
    .carousel-item {
        height: 100%;
    }

    .carousel-caption {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        text-align: center;
        background-color: rgba(0, 0, 0, 0.4); /* Optional: adds a semi-transparent background */ 
        padding: 10px;
        border-radius: 10px;
        width: 100%; /* Adjust the width of the caption */
        height: 100%; /* Adjust the height of the caption */
        font-size: 1.2em; /* Adjust the font size of the caption */
    }
    .carousel-item {
        transition: transform 0.7s ease, opacity 0.8s ease; /* Adjust transition duration */
    }

</style>


    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="4000">
        
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="{{ asset('images/baner/connexion.png') }}" alt="First slide">
                <div class="carousel-caption">
                    <h5 id="quiSommesNous" >Connexion</h5>
                </div>
            </div>        
        </div>
    </div>
    <div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-center">
                    <h1>Connectez-vous</h1>
                </div>
                <div class="card-body">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <div class="form-group">
                            <label for="username">Email</label>
                            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required autofocus>
                        </div>

                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" class="form-control" id="password" name="_password" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button type="submit" class="btn btn-primary btn-outline-block">Connexion</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
